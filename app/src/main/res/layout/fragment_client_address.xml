<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/street_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street:"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/street_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/street_label"
        android:layout_alignTop="@id/street_label"
        android:layout_marginLeft="8dp"
        android:inputType="text"
        android:hint="Enter street address here"/>

    <TextView
        android:id="@+id/city_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:layout_below="@id/street_label"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/city_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/city_label"
        android:layout_alignTop="@id/city_label"
        android:layout_marginLeft="8dp"
        android:inputType="text"
        android:hint="Enter city here"/>

    <TextView
        android:id="@+id/state_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State:"
        android:layout_below="@id/city_label"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/state_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/state_label"
        android:layout_alignTop="@id/state_label"
        android:layout_marginLeft="8dp"
        android:inputType="text"
        android:hint="Enter state here"/>

    <TextView
        android:id="@+id/zip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zip:"
        android:layout_below="@id/state_label"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/zip_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zip_label"
        android:layout_alignTop="@id/zip_label"
        android:layout_marginLeft="8dp"
        android:inputType="number"
        android:hint="Enter zip code here"/>

</RelativeLayout>
